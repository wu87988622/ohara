{
  "name": "ohara-manager-client",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^10.16.3"
  },
  "scripts": {
    "setup": "yarn && yarn build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint --max-warnings 0 src cypress",
    "lint:ci": "cross-env CI=true eslint --max-warnings 0 src cypress",
    "vet": "yarn audit",
    "test": "react-scripts test --env=jsdom",
    "test:watch": "yarn test",
    "test:report": "cross-env CI=true yarn test --reporters=default --reporters=jest-junit",
    "test:coverage": "yarn test --coverage --watchAll=false",
    "test:api:open": "cross-env CYPRESS_CONFIG_FILE=api cypress open",
    "test:api:run": "cross-env CYPRESS_CONFIG_FILE=api cypress run",
    "test:e2e:open": "cross-env CYPRESS_CONFIG_FILE=e2e cypress open",
    "test:e2e:run": "cross-env CYPRESS_CONFIG_FILE=e2e cypress run"
  },
  "dependencies": {
    "@material-ui/core": "4.5.1",
    "@material-ui/icons": "4.5.1",
    "@testing-library/cypress": "5.0.2",
    "cypress": "3.4.1",
    "cypress-plugin-retries": "1.3.0",
    "eslint-plugin-cypress": "2.7.0",
    "final-form": "4.18.5",
    "jest-junit": "8.0.0",
    "jointjs": "3.1.1",
    "jquery": "3.4.1",
    "moment": "2.24.0",
    "react": "16.10.2",
    "react-content-loader": "4.3.2",
    "react-dom": "16.10.2",
    "react-draggable": "4.0.3",
    "react-final-form": "6.3.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.2.0",
    "styled-components": "4.4.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended"
    ],
    "plugins": [
      "jest"
    ],
    "globals": {
      "cy": false,
      "Cypress": false,
      "describe": false,
      "context": false,
      "before": false,
      "after": false,
      "beforeEach": false,
      "afterEach": false,
      "it": false,
      "assert": false,
      "expect": false
    },
    "rules": {
      "jest/no-focused-tests": "warn",
      "jest/valid-describe": "warn",
      "jest/no-identical-title": "warn",
      "no-alert": "warn",
      "no-debugger": "warn",
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "args": "after-used"
        }
      ],
      "no-template-curly-in-string": "warn",
      "no-case-declarations": "off",
      "array-callback-return": "warn",
      "object-shorthand": "warn",
      "react/prop-types": "warn",
      "react/no-unused-prop-types": "warn",
      "camelcase": [
        "warn",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ],
      "eqeqeq": "warn"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}

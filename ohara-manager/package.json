{
  "name": "ohara-manager",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "^8.12.0"
  },
  "scripts": {
    "preinstall": "node ./scripts/checkYarnVersion.js",
    "setup": "yarn && yarn --cwd client setup",
    "start": "nodemon index.js --exec 'yarn lint:server && node'",
    "start:prod": "node index.js",
    "start:client": "yarn --cwd client start",
    "dev:client": "run-p start:client test:client",
    "lint": "run-s lint:*",
    "lint:ci": "run-s lint:server:ci lint:client",
    "lint:server:ci": "yarn lint:server --max-warnings 0",
    "lint:server": "eslint --ignore-pattern \"/client\" --ignore-pattern \"/coverage\" \"**/*.js\"",
    "lint:client": "yarn --cwd client lint",
    "vet": "yarn audit && yarn --cwd client vet",
    "test": "run-s test:server:unit test:client:unit",
    "test:client": "yarn --cwd client test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server:unit": "JEST_JUNIT_OUTPUT=\"./test-reports/serverUnits.xml\" jest --reporters=default --reporters=jest-junit",
    "test:client:unit": "yarn --cwd client test:report",
    "test:client:coverage": "yarn --cwd client test:coverage",
    "test:e2e": "node ./scripts/startAndTest.js",
    "test:e2e:open": "yarn --cwd client e2e",
    "test:e2e:ci": "node ./scripts/startAndTest.js --prod",
    "clean": "run-s clean:*",
    "clean:processes": "node ./scripts/cleanAllProcesses.js",
    "clean:server": "rm -rf ./test-reports",
    "clean:client": "rm -rf ./client/build",
    "build:client": "yarn --cwd client build",
    "format": "prettier --write \"**/*.*(js|json|html|md)\"",
    "format:check": "prettier --check \"**/*.*(js|json|html|md)\"",
    "license:test": "cd .. && gradle licenseTest",
    "license:apply": "cd .. && gradle licenseApply",
    "copy:jars": "cp ../ohara-it/build/libs/ohara-it-sink.jar client/cypress/fixtures/plugin/ && cp ../ohara-it/build/libs/ohara-it-source.jar client/cypress/fixtures/plugin/",
    "prepush": "run-s lint test license:apply format"
  },
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "execa": "1.0.0",
    "express": "4.16.3",
    "forever": "0.15.3",
    "http-proxy-middleware": "0.19.1",
    "lodash": "4.17.11",
    "morgan": "1.9.1",
    "uuid": "3.3.2",
    "yargs": "12.0.2"
  },
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "eslint": "5.15.1",
    "eslint-plugin-node": "7.0.1",
    "faker": "4.1.0",
    "jest": "24.5.0",
    "jest-junit": "5.1.0",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "prettier": "1.17.0",
    "wait-on": "2.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/client/**",
      "!**/coverage/**",
      "!**/node_modules/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  }
}
